<!DOCTYPE html>
<html lang="en">
<head>
    <%-include('./templates/header')%>
</head>
<body>
    <div class="container mx-5 my-5 text-center">
        <div class="card">
            <div class="card-header">
                <h1>Ejemplo de EJS</h1>
            </div>
            <div class="card-body">
                <%if(dishes.size > 0){%>
                    Hay <%=dishes.size%> Platos 
            
                    <table class="table table-striped table-hover">
                        <thead>
                            <th>Id</th>
                            <th>Nombre</th>
                            <th>Calorias</th>
                            <th>Vegetariano</th>
                            <th>Valor</th>
                        </thead>
                        <tbody>
                            <%dishes.forEach(dish =>{%>
                                <tr>
                                    <td><%=dish.id%></td>
                                    <td><%=dish.name%></td>
                                    <td><%=dish.calories%></td>
                                    <td><%=dish.isVegetarian%></td>
                                    <td><%=dish.value%></td>
                                </tr>                        
                                <%})%>
                        </tbody>
                    </table>
                <%}else{%>
                    No hay Platos
                <%}%>
                <a href="newdish" class="btn btn-success w-50">Agregar Plato</a>
            </div>
        </div>
    </div>
    <%-include('./templates/footer')%>
</body>
</html>